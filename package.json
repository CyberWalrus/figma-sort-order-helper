{
    "name": "figma-sort-order-helper",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "start": "yarn dev",
        "build": "tsc && vite build && vite build --config vite-code.config.ts",
        "lint": "yarn eslint:check && yarn stylelint:check && yarn ts:check",
        "lint:fix": "yarn eslint:fix && yarn stylelint:fix",
        "test": "yarn test:unit && yarn test:unit:isolate",
        "dev": "vite",
        "preview": "vite preview",
        "ts:scss:build": "yarn typed-scss-modules src",
        "ts:check": "yarn ts:scss:build && tsc --noEmit --p tsconfig.check.json",
        "eslint:check": "eslint --max-warnings 0 --ext .jsx,.js,.ts,.tsx src/",
        "eslint:fix": "eslint --fix --ext .jsx,.js,.ts,.tsx src/",
        "stylelint:check": "stylelint \"src/**/*.scss\"",
        "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
        "test:unit": "VITEST_TEST_TYPE=unit TZ=Europe/Moscow yarn vitest run --coverage --isolate=false",
        "test:unit:isolate": "VITEST_TEST_TYPE=unit-isolate TZ=Europe/Moscow yarn vitest run --coverage --isolate=true"
    },
    "dependencies": {
        "clsx": "2.1.0",
        "lodash-es": "4.17.21",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "zod": "3.22.4",
        "zustand": "4.5.2"
    },
    "devDependencies": {
        "@cyber-walrus/configs": "1.3.0",
        "@testing-library/jest-dom": "6.4.2",
        "@testing-library/react": "14.2.2",
        "@types/lodash-es": "4.17.12",
        "@types/mock-fs": "4.13.4",
        "@types/react": "18.2.67",
        "@types/react-dom": "18.2.22",
        "@vitejs/plugin-react-swc": "3.6.0",
        "@vitest/coverage-v8": "1.4.0",
        "dotenv": "16.4.5",
        "jsdom": "24.0.0",
        "tsc-alias": "1.8.8",
        "typed-scss-modules": "8.0.0",
        "vite": "5.1.6",
        "vite-plugin-singlefile": "2.0.1",
        "vite-plugin-static-copy": "1.0.1",
        "vitest": "1.4.0"
    }
}