{
    "extends": "@cyber-walrus/typescript-config/tsconfig.json",
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@figma",
            "./types"
        ],
        "baseUrl": "./",
        "paths": {
            "$*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src",
        "types",
        "storybook",
        "scripts",
        "vitest.setup.ts",
        ".eslintrc.cjs",
        "*.config.js",
        "*.config.cjs",
        "*.config.ts",
        "__mocks__",
        "code"
    ],
    "exclude": [
        "node_modules"
    ],
}